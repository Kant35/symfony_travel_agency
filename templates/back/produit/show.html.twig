{% extends 'back/layout.html.twig' %}

{% block title %}Produit{% endblock %}

{% block content %}
    <h1 class="text-center text-primary">Produit</h1>

    {# <a href="{{ path('app_produit_edit', {'id': produit.id}) }}" class="btn btn-action-modifier">Modifier le produit</a> #}
    <a class="position-relative btn btn-warning ms-5 m-3"href="{{ path('app_produit_edit', {'id': produit.id}) }}">Modifier le produit</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ produit.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{vich_uploader_asset(produit)}}" alt="" style="width:150px"></td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}€ / personne</td>
            </tr>
        </tbody>
    </table>

<h2 class="text-center">Liste des Etapes</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Jour</th>
                <th>Titre</th>
                <th>Photo</th>
                <th>Description</th>
                <th>Hotel</th>
            </tr>
        </thead>
        <tbody>
        {% for etape in produit.etapes %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ etape.titre }}</td>
                <td><img src="{{vich_uploader_asset(etape)}}" alt="" style="width:150px"></td>
                <td>{{ etape.description }}</td>
                <td>{{ etape.hotel }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">Aucune etapes trouvée</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {{ include('back/produit/_delete_form.html.twig') }}
{% endblock %}
