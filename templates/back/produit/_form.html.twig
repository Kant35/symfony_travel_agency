{{ form_start(form) }}
    {{ form_row(form.titre) }}
    {{ form_row(form.description) }}
    {{ form_row(form.photoFile) }}
    {{ form_row(form.prix) }}
    {{ form_row(form.destinations) }}

    <div class="container-etapes" data-prototype="{{form_widget(form.etapes.vars.prototype)|e('html_attr') }}">
            {% for row in form.etapes %}
                <div class="card-etape">
                    <div class="card-header bg-warning">
                        <p> Etape {{loop.index}}</p>
                    </div>
                    <div class="card-body">
                        <div class="d-flex flex-column">
                            {{form_row(row)}}
                        </div>
                    </div>
                </div>
            {% endfor %}
    </div>

    <button class="btn btn-{{ button_type|default('success') }}">{{ button_label|default('Enregistrer') }}</button>
{{ form_end(form) }}
