{% extends 'back/layout.html.twig' %}

{% block title %}Destination index{% endblock %}

{% block content %}
    <h1 class="text-center">Index Destination</h1>
    
    <a href="{{ path('app_destination_new') }}" class="btn btn-success position-relative ms-5">Create new</a>

    <table class="mt-2 mx-auto col-10 text-center">
        <thead class="bg-grey">
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for destination in destinations %}
            <tr>
                <td>{{ destination.id }}</td>
                <td>{{ destination.titre }}</td>
                <td>{{ destination.Description }}</td>
                <td>
                    <a href="{{ path('app_destination_show', {'id': destination.id}) }}" class="btn btn-action">voir</a>
                    <a href="{{ path('app_destination_edit', {'id': destination.id}) }}" class="btn btn-action-modifier">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
