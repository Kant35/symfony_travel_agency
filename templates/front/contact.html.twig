{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Contact{% endblock %}

{% block body %}

    <h1 class="text-center text-primary mt-5">Formulaire de Contact</h1>
    
    <div class="col-6 mx-auto">

        {{form_start(formContact)}}
            <div class="d-flex">
                {{form_row(formContact.prenom)}}
                {{form_row(formContact.nom)}}
            </div>

            <div class="d-flex">
                {{form_row(formContact.email)}}
                {{form_row(formContact.telephone)}}
            </div>
                {{form_row(formContact.message)}}


            <div class="d-flex justify-content-center mt-4">
                <button class="btn btn-success">Envoyer</button>
            </div>
        {{form_end(formContact)}}

    </div>

{% endblock %}
