{% extends 'base.html.twig' %}

{% block title %}Modifier mon Mot de Passe{% endblock %}

{% block body %}
    {% for label, messages in app.flashes(['success', 'danger', 'warning']) %}
        {% for message in messages %}
            <div class="col-md-12 alert alert-{{ label }} text-center" role="alert">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <div class="m-5 col-10 mx-auto bg-white p-3">
        <h3 class="text-center text-primary mb-3">Formulaire de modification de mot de passe</h3>
        {{form_start(form)}}
            <div class="d-flex">
                <p class="form-control">Nom : {{ app.user.nom}}</p>
                <p class="form-control">Prenom : {{ app.user.prenom}}</p>
            </div>

            <p class="form-control">Email : {{ app.user.email}}</p>

            <hr>
            
            {{form_row(form.old_password)}}

            <div class="d-flex">
                <div class="col-md-6">
                    {{form_row(form.new_password)}}
                </div>
                <div class="col-md-6 d-flex justify-content-center align-items-center">
                    <button class="btn btn-success">Enregistrer les modifications</button>
                </div>
            </div>

        {{form_end(form)}}
    </div>

    <div class="d-flex justify-content-center my-3">
        <a class="text-center btn btn-secondary" href="{{path('app_profil')}}">Retourner Ã  mon Compte</a>
    </div>
{% endblock %}
